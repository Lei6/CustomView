<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.customview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".foldedtext.FoldedTextActivity"></activity>
        <activity android:name=".loopviewpage.BannerActivity" />
        <activity android:name=".slidingdrawer.PoiActivity" />
        <activity android:name=".sort.SideActivity" />
        <activity android:name=".toggle.ToggleButtonActivity" />
        <activity android:name=".music.MusicActivity" />
        <activity android:name=".ninegridview.NineGridActivity"/>
        <activity android:name=".picture_processing.PictureActivity"/>
        <activity android:name=".popupWindow.PopupWindowActivity"/>
        <activity android:name=".round_image.RoundImageActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".window_manager.FloatWindowService"
            android:exported="false"/>
    </application>

</manifest>